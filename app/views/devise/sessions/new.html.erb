<%#Sign In view%>
<div class="container d-flex justify-content-center align-items-center" id="sign-in-container">
    <div class="col-4 sign-box text-center">
      <h3>Sign in</h3>
      <br>
      <div class="sign-text">
        <%if notice%>
          <p><%= notice %></p>
        <%end%>
        <%if alert%>
          <p><%= alert %></p>
        <%end%>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="field form-group">
          <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "Email"%>
        </div>

        <div class="field form-group">
          <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder: "password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field sign-text">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <br>
        <div class="actions">
          <%= f.submit "Sign in", class: "btn btn-primary"%>
        </div>
      <% end %>

    </div>
</div>

