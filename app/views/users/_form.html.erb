<%= form_with(model: user) do |form| %>

  <%# User details section %>

  <div class="row">
    <div class="col-6">

      <div class="field form-group">
        <%= form.label :first_name, style: "display: block", class: "label-text" %>
        <%= form.text_field :first_name, class:"form-control"%>
      </div>

      <div class="field form-group">
        <%= form.label :last_name, style: "display: block", class: "label-text" %>
        <%= form.text_field :last_name, class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :travel_limit, style: "display: block", class: "label-text"  %>
        <%= form.text_field :travel_limit, class:"form-control" %>
      </div>

    </div>
    <div class="col-6">

      <div class="field form-group">
        <%= form.label :email, style: "display: block", class: "label-text"  %>
        <%= form.text_field :email, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :admin, style: "display: block", class: "label-text"  %>
        <%= form.text_field :admin, class:"form-control" %>
      </div>
    </div>
  </div>
  <hr>

  <%# Password section %>

  <div class="row">

    <p>Please enter a new temporary password for the user </p>
    <div class="col-6">

      <div class="field form-group">
        <%= form.label :password, style: "display: block", class: "label-text" %>
        <%= form.text_field :password, autocomplete: "new-password", class:"form-control"%>
      </div>

    </div>
    <div class="col-6">

      <div class="field form-group">
        <%= form.label :password_confirmation, style: "display: block", class: "label-text" %>
        <%= form.text_field :password_confirmation, autocomplete: "new-password", class:"form-control"%>
      </div>

    </div>

  </div>
  <br>
  <div class="row float-end">
    <div>
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>